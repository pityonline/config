[core]
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true

[remote "origin"]
	url = git@github.com:pityonline/scripts.git
	fetch = +refs/heads/*:refs/remotes/origin/*

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	a = add
	af = add -f
	br = branch
	ca = commit -a
	ci = commit
	cm = commit -m
	co = checkout
	dc = diff --cached
	df = diff
	ds = diff --stat
	dsc = diff --stat --cached
	lg = log
	lp = log -p
	ls = ls-files
	ps = push
	pu = pull
	sb = show-branch
	st = status
	w = whatchanged
